<link rel="stylesheet" href="/css/modal.css" />
<!-- This example requires Tailwind CSS v2.0+ -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<div class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center">
  <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
  
  <div class="modal-container bg-white lg:w-2/3 w-screen mx-auto rounded shadow-lg z-50 overflow-y-auto ">
    
    <!-- Add margin if you want to see some of the overlay behind the modal-->
    <div class="modal-content py-4 text-left px-6" >
      <!--Title-->
      <div class="flex justify-between items-center pb-3">
        <p class="text-2xl font-bold" ></p>
        <div class="modal-close cursor-pointer z-50">
          <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
            <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
          </svg>
        </div>
      </div>

      <!--Body-->
        <div class="grid lg:grid-cols-2 grid-cols-1">
          <div class="pb-8">
            <img id="mod__cover" class="rounded" onerror="this.src='/images/eventcomingsoon.jpeg';" src="/images/eventcomingsoon.jpeg" />
          </div>
          <div class="px-2">
            <h1 id="mod__title" class="font-bold lg:text-3xl text-2xl text-center" style="color: forestgreen;">Lorem ipsum</h1>
            <p id="mod__desc">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Id eveniet, in
              nisi nihil accusamus et voluptatum, harum dolores incidunt sapiente
              distinctio dignissimos ut? Facilis voluptates eligendi sapiente in
              delectus voluptate?
            </p>
            <p id="mod__date_time_venue"></p>
            <div id="mod_team-details"></div>
            <%	if(user){ %>
                <!--Footer-->
                <div id="loader"class="loader hidden mx-auto"></div> 

                <div class="flex flex-col justify pt-2">
                  <button id="singlereg-btn" class="hidden mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">Register</button>
                  <button id="teamreg-btn" class="hidden mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">Create a Team</button>
                  <button id="joinreg-btn" class="hidden mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">Join a Team</button>
                  <button id="unreg-btn" class=" hidden mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">Unregister</button>                 

            <% } else { %>
              <script>
                function gotoLogin(){
                  let page = window.location.href.split("/")[window.location.href.split("/").length - 1];
                  window.location.href=`/auth#signin?next=/${page}`;
                }
              </script>
              <button id="login-btn" class=" mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none" onclick="gotoLogin()">Please Log In to register for events</button>  
            <% } %>
            <div id="create-team-form" class="hidden form w-full"> 
              <div class="flex flex-col mx-auto max-w-md">
                <input
                  class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none  focus:bg-white"
                  type="text"
                  id="create-team-name"
                  placeholder="Enter a Team Name"
                  required
                />
                <input
                  class="w-full px-8 py-4 rounded-lg font-medium my-8 bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none  focus:bg-white"
                  type="text"
                  id="create-meeting-url"
                  placeholder="Enter a Meeting URL"
                  required
                />
                <button
                id="create-team-btn"
                class="mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none"
                > Create Team</button>
            </div>
            </div>
            <div id="join-team-form" class="hidden form w-full">
              <div class="flex flex-col mx-auto max-w-md">
                      <input
                        class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none  focus:bg-white"
                        type="text"
                        id="join-team-code"
                        placeholder="Enter a Team Code"
                        required
                      />
                      <button
                      id="join-team-btn"
                      class="mt-5 tracking-wide font-semibold register-btn text-gray-100 hover:text-white w-full py-4 rounded-lg transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none"
                      > Join Team</button>
              </div>
            </div>
          </div>
        </div>
      

      
    </div>
  </div>
  </div>
  </div>
</div>
<script src="/js/utils/moment.js"></script>
<script src="/js/modal.js"></script>
